{
  "info": {
    "name": "PointPay API - Complete Collection",
    "description": "Complete API collection for PointPay payment gateway integration",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://app.pointwave.ng/api/v1"
    },
    {
      "key": "secret_key",
      "value": "YOUR_SECRET_KEY_HERE"
    },
    {
      "key": "business_id",
      "value": "YOUR_BUSINESS_ID_HERE"
    },
    {
      "key": "api_key",
      "value": "YOUR_API_KEY_HERE"
    }
  ],
  "item": [
    {
      "name": "1. Create Virtual Account",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{secret_key}}"
          },
          {
            "key": "x-business-id",
            "value": "{{business_id}}"
          },
          {
            "key": "x-api-key",
            "value": "{{api_key}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Idempotency-Key",
            "value": "{{$guid}}"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"first_name\": \"Jamil\",\n  \"last_name\": \"Abubakar\",\n  \"email\": \"jamil@example.com\",\n  \"phone_number\": \"08078889419\",\n  \"account_type\": \"static\",\n  \"id_type\": \"bvn\",\n  \"id_number\": \"22222222222\",\n  \"external_reference\": \"customer-12345\",\n  \"bank_codes\": [\"100033\"]\n}"
        },
        "url": {
          "raw": "{{base_url}}/virtual-accounts",
          "host": ["{{base_url}}"],
          "path": ["virtual-accounts"]
        }
      }
    }
  ]
}
